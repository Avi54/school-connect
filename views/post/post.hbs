<h1>Shared Posts</h1>

<div class="row">
    {{#each posts}}
    <div class="col s12">
        <div class="card">
            <div class="card-image">
            </div>
            <div class="card-content">
                <h5>{{title}}</h5>
                Link: <a href="{{link}}" target="_blank">{{link}}</a>

                <br>
                <p>{{body}}</p>
                <br>
                <div class="chip">
                    <img src="{{user.image}}" alt="user-image">
                    <a href="/posts/user/{{user._id}}">{{user.displayName}}</a>
                </div>
            </div>
            <div class="card-action">
                <a href="/posts/{{_id}}" class="btn grey">Read more</a>
            </div>
        </div>
    </div>
    {{else}}
    <p>No Posts Shared</p>
    {{/each}}
</div>